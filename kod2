	cout << endl;
	cout << "..." << endl;
	cout << endl;
	cout << endl;
	cout << "Буквы, которые можно использовать: " << endl;
	printf (alphavit);
	cout << endl;
	cout << endl;
	cout << "Игра началась!" << endl;
	cout << endl;
	system("pause");
	system("cls");
	
}

void slovo()
{
	char slovo[11]={'п','р','о','г','р','а','м','м','и','с','т'};
	char Slovo[11]={'?','?','?','?','?','?','?','?','?','?','?'};
	printf (Slovo);
}

void vvod()
{	
	char bukva = ' ';
	char alphavit[33]={'а','б','в','г','д','е','ё','ж','з','и','й','к','л','м','н','о','п','р','с','т','у','ф','х','ц','ч','ш','щ','ъ','ы','ь','э','ю','я'};
	char slovo[11]={'п','р','о','г','р','а','м','м','и','с','т'};
	char Slovo[11]={'?','?','?','?','?','?','?','?','?','?','?'};
	
	
	while (true)
	{	
		int podhodit;
		cout << endl;
		cout << endl;
		cout << "Введите букву: " << endl;
		cout << endl;
		cin >> bukva;
		
		for (int i=0; i<33; i++)
			if(bukva != alphavit[i])
			{		
				cout << "Смените раскладку!" << endl;
				break;
				cout << endl;	
			}			
		
		for (int i=0; i<11; i++)
			if(bukva == slovo[i])
			{
				Slovo[i] = slovo[i];
				system ("cls");
				printf(Slovo);					
			}
	}


	
}

int main()
{
	int N=0;
	
	
    setlocale(LC_ALL, "rus");
    cout << "Начать игру: 1" << endl;
    cout << "Выйти: 0" << endl;
    cin >> N; 
    
	if (N==0)
    {
    	system ("cls");
		cout << "Игра окончена" << endl;
		return 0;	
    }
    
	if (N==1)
    {
    	system ("cls");
		nachalo();
		slovo();
		vvod();	
    }
    
//    if (N !=1 && N !=0)
