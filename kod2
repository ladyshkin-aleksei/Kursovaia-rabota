void nachalo()
{
	
	char alphavit[35]={'а','б','в','г','д','е','ё','ж','з','и','й','к','л','м','н','о','п','р','с','т','у','ф','х','ц','ч','ш','щ','ъ','ы','ь','э','ю','я'};
	
	cout << "Правила игры: " << endl;
